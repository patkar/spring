<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="sp" class="com.deloitte.smartphone" autowire="byType">
		<property name="name" value="oneplus"></property>
		<property name="price" value="32000"></property>
		<!-- <constructor-arg ref="a"></constructor-arg> -->
	</bean>
	
	<bean id="apps" class="com.deloitte.application">
		<property name="name" value="pubg"></property>
		<property name="type" value="game"></property>
	</bean>
</beans>
   